<Window x:Class="My Advanced Tool kit.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Funny_Admin_Tool_kit"
        mc:Ignorable="d"
        Title="My Advanced Tool kit" Height="450" Width="800">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem x:Name="Menu_File" Header="_File">
                <MenuItem x:Name="Menu_File_New" Header="_New" />
                <MenuItem x:Name="Menu_File_Open" Header="_Open" />
                <MenuItem x:Name="Menu_File_Save" Header="_Save" />
                <Separator />
                <MenuItem x:Name="Menu_File_Exit" Header="_Exit" />
            </MenuItem>
            <MenuItem x:Name="Menu_Help" Header="_Help">
                <MenuItem x:Name="Menu_Help_About" Header="_About" />
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <ProgressBar x:Name="Statusbar_Progressbar" Minimum="0" Maximum="100" Value="0" Width="90" Height="16" />
            <TextBlock Text="Status: " />
            <TextBlock x:Name="Statusbar_Text" Text="Idle" />
        </StatusBar>
        <TabControl>
            <TabItem x:Name="Tabcontrol_Fileexplorer" Header="File Explorer">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="20" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="20" />
                    </Grid.RowDefinitions>
                    <Label Content="Folder to inspect:" Grid.Column="1" Margin="10,10,10,0" Grid.Row="1" VerticalAlignment="Top" Padding="0,5,5,0" />
                    <Label Content="Files and folders found: (Double click to inspect)" Grid.Column="3" Margin="10.5,0,10,0" Grid.Row="0" VerticalAlignment="Bottom" Padding="0,5,5,0" />
                    <Label Content="Info Per file type:" Grid.Column="1" Margin="10.5,0,10,0" Grid.Row="2" VerticalAlignment="Bottom" Padding="0,5,5,0" />
                    <Label Content="Selected File / Folder info:" Grid.Column="3" Margin="10.5,0,10,0" Grid.Row="2" VerticalAlignment="Bottom" Padding="0,5,5,0" />
                    <TextBox x:Name="Fileexplorer_Textbox_Folderinput" Grid.Column="1" Margin="10,36,10,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" Height="23" VerticalAlignment="Top"/>
                    <Button x:Name="Fileexplorer_Button_Inspectfolder" Content="Inspect folder" Grid.Column="1" HorizontalAlignment="Left" Margin="10,64,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100"/>
                    <ListBox x:Name="Fileexplorer_listbox_Resultpath" Grid.Column="3" Grid.Row="1" Margin="10,10,10,10" />
                    <ListView x:Name="Fileexplorer_listView_Resultsize" Grid.Column="1" Grid.Row="3" Margin="10,10,10,10">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Property" Width="Auto" DisplayMemberBinding="{Binding property}" />
                                <GridViewColumn Header="Count" Width="Auto" DisplayMemberBinding="{Binding count}" />
                                <GridViewColumn Header="Size" Width="Auto" DisplayMemberBinding="{Binding size}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <ListView x:Name="Fileexplorer_listView_Resultextension" Grid.Column="3" Grid.Row="3" Margin="10,10,10,10" />
                </Grid>
            </TabItem>
            <TabItem x:Name="Tabcontrol_ActiveDirectory" Header="Active Directory">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="250*" />
                        <ColumnDefinition Width="20" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="20" />
                    </Grid.RowDefinitions>
                    <Label Content="New User OU:" Grid.Column="1" Margin="10,10,10,0" Grid.Row="1" VerticalAlignment="Top" Padding="0,5,5,0" />
                    <Label Content="AD Layout:" Grid.Column="3" Margin="10,0" Grid.Row="0" VerticalAlignment="Bottom" Padding="0,5,5,0" />
                    <Label Content="User Info:" Grid.Column="5" Margin="10,0" Grid.Row="0" VerticalAlignment="Top" Padding="0,5,5,0" />
                    <TextBox x:Name="ActiveDirectory_Textbox_OU" Grid.Column="1" Margin="10,36,10,0" Grid.Row="1" TextWrapping="NoWrap" Text="" Height="23" VerticalAlignment="Top"/>
                    <Label Content="New User Cn:" Grid.Column="1" Margin="10,64,10,0" Grid.Row="1" VerticalAlignment="Top" Padding="0,5,5,0" />
                    <TextBox x:Name="ActiveDirectory_Textbox_Cn" Grid.Column="1" Margin="10,90,10,0" Grid.Row="1" TextWrapping="NoWrap" Text="" Height="23" VerticalAlignment="Top"/>
                    <Label Content="User Samaccountname:" Grid.Column="1" Margin="10,118,10,0" Grid.Row="1" VerticalAlignment="Top" Padding="0,5,5,0" />
                    <TextBox x:Name="ActiveDirectory_Textbox_Samaccountname" Grid.Column="1" Margin="10,144,10,0" Grid.Row="1" TextWrapping="NoWrap" Text="" Height="22" VerticalAlignment="Top"/>
                    <Button x:Name="ActiveDirectory_Button_NewUser" Content="Create New User" Grid.Column="1" Margin="10,186,10,0" Grid.Row="1" VerticalAlignment="Top"/>
                    <Label Content="Create From Csv:" Grid.Column="1" Margin="10,0,10,62.5" Grid.Row="1" Padding="0,5,5,0" Height="21" VerticalAlignment="Bottom" />
                    <TextBox x:Name="ActiveDirectory_Textbox_CSVpath" Grid.Column="1" Margin="10,0,10,35.5" Grid.Row="1" TextWrapping="NoWrap" Text="" Height="22" VerticalAlignment="Bottom"/>
                    <Button x:Name="ActiveDirectory_Button_NewUserCsv" Content="New Users from Csv" Grid.Column="1" Margin="10,0,10,10.5" Grid.Row="1" Height="22" VerticalAlignment="Bottom"/>
                    <TreeView x:Name="ActiveDirectory_Treeview" Grid.Column="3" Grid.Row="1">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding nest}">
                                <TextBlock Text="{Binding name}"/>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                    <DataGrid x:Name="ActiveDirectory_DataGrid" AutoGenerateColumns="true" AlternationCount="1" AlternatingRowBackground="#FFB4B4B4" Grid.Column="5" Grid.Row="1"/>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>